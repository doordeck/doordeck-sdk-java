<resources>

    <!-- Base application theme. -->
    <style name="SDKTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar" >
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="lightTheme" parent="@style/SDKTheme" >
        <!-- Customize your theme here. -->
        <item name="ddColorAccent">@color/ddColorAccentLight</item>
        <item name="ddColorPrimary">@color/ddColorPrimaryLight</item>
        <item name="ddColorSecondary">@color/ddColorSecondaryLight</item>
    </style>

    <style name="darkTheme" parent="@style/SDKTheme" >
        <!-- Customize your theme here. -->
        <item name="ddColorAccent">@color/ddColorAccentDark</item>
        <item name="ddColorPrimary">@color/ddColorPrimaryDark</item>
        <item name="ddColorSecondary">@color/ddColorSecondaryDark</item>
    </style>

</resources>
