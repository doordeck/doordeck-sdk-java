<resources>

    <!-- Base application theme. -->
    <style name="SDKTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar" >
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ddlightTheme" parent="@style/SDKTheme" >
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="ddColorAccent">@color/ddColorAccentLight</item>
        <item name="ddColorPrimary">@color/ddColorPrimaryLight</item>
        <item name="ddColorSecondary">@color/ddColorSecondaryLight</item>
        <item name="ddTextColorPrimary">@color/ddColorPrimaryDark</item>
        <item name="ddTextColorSecondary">@color/ddColorPrimaryLight</item>
        <item name="ic_unlock_circle">@drawable/ic_unlock_circle</item>
        <item name="ic_button">@drawable/ic_button</item>
    </style>

    <style name="ddDarkTheme" parent="@style/SDKTheme" >
        <!-- Customize your theme here. -->
        <item name="ddColorAccent">@color/ddColorAccentDark</item>
        <item name="ddColorPrimary">@color/ddColorPrimaryDark</item>
        <item name="ddColorSecondary">@color/ddColorSecondaryDark</item>
        <item name="ddTextColorPrimary">@color/ddColorPrimaryLight</item>
        <item name="ddTextColorSecondary">@color/ddColorPrimaryDark</item>
        <item name="ic_unlock_circle">@drawable/ic_circle_dark</item>
        <item name="ic_button">@drawable/ic_button_dark</item>
    </style>

</resources>
